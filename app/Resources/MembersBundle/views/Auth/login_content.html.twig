{% extends '@Members/Form/form_wrapper.html.twig' %}

{% block form %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {{ form_start(form, { 'action': path('members_user_security_check'), 'attr': {'novalidate': 'novalidate', 'class': 'members_user_login uk-form' } }) }}

    {{ form_row(form._username, {
        'attr': {'class': 'uk-input' }
    }) }}

    {{ form_row(form._password, {
        'attr': {'class': 'uk-input' }
    }) }}

    {{ form_row(form._remember_me) }}

    {{ form_row(form._submit, {
        'attr': {'class': 'uk-button uk-button-default' }
    }) }}
    {{ form_end(form) }}
{% endblock form %}
